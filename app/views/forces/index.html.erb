<p id="notice"><%= notice %></p>

<h1>Forces</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forces.each do |force| %>
      <tr>
        <td><%= force.title %></td>
        <td><%= force.user_id %></td>
        <td><%= link_to 'Show', force %></td>
        <td><%= link_to 'Edit', edit_force_path(force) %></td>
        <td><%= link_to 'Destroy', force, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Force', new_force_path %>
